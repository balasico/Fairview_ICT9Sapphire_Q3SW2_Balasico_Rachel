    function desired_Prod(){
      document.getElementById('desired_prod_txt').innerHTML = 
      "<br>" + 
      "Your desired product is <span class='fw-bold text-secondary'>Booster pack</span> for ₱450.";

      var budget = 450;
      var discount = budget * 0.20;
      var finalPrice = budget - discount;

      document.getElementById("pwd_disc_txt").innerHTML =
      "<div class='p-2 rounded-2' style='background-color: rgba(255, 255, 255, 0.5);'>" +
      "<p class='text-secondary'>Original Price: ₱" + budget.toFixed(2) + "</p>" +
      "<p class='text-success'>PWD Discount (20%): -₱" + discount.toFixed(2) + "</p>" +
      "<p class='fw-bold text-info'>Final Price: ₱" + finalPrice.toFixed(2) + "</p>" +
      "</div>"
    }

    function showProd(){ 
      document.getElementById("prod_btn").innerHTML =
      //"<p class='fst-italic text-secondary'> Other products:</p>"+
